@using X.PagedList.Mvc.Core;
@using X.PagedList.Web.Common;
@model X.PagedList.IPagedList<Products>
@{
    ViewData["Title"] = "Home Page";
}
<br/><br/>
<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h4 class="fw-normal">
                        <label style="color:steelblue">@product.Name</label>
                    </h4>
                </div>
                <img src="/@product.Image" class="card-img-top" style="height:300px;" alt="Card Image">
                <div class="card-header">
                   <div class="d-flex justify-content-between align-items-center">
                       <div class="btn-group">
                            <label style="font-size:20px;color:#a51313;"><b>Price : @product.Price</b></label>
                       </div>
                        <a asp-action="Details" asp-controller="Home" asp-route-id="@product.Id" class="btn btn-outline-info">Details</a>
                   </div>
                </div>
            </div>
        </div>
    }
</div>
<div>
    @Html.PagedListPager(Model,c=>Href("~/Customer/Home/Index?page="+c),PagedListRenderOptions.PageNumbersOnly)
</div>

