@model OnlineShop.Areas.Admin.Models.RoleUserVM

@{
    ViewData["Title"] = "Assign Role";
}

<br />
<style>
    label.error {
        color: red;
    }
</style>
<h2 class="text-info">Assign Role</h2>
<form id="create-product" asp-action="Assign" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>
        <div class="form-group row mb-2">
            <div class="col-2">
                <label asp-for="UserId"></label>
            </div>
            <div class="col-5">
                <select asp-for="UserId" asp-items="ViewBag.UserId" class="form-control"></select>
                @*<input asp-for="ProductTypeId" class="form-control"/>*@
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>

        </div>
        <div class="form-group row mb-2">
            <div class="col-2">
                <label asp-for="RoleId"></label>
            </div>
            <div class="col-5">
                <select asp-for="RoleId" asp-items="ViewBag.RoleId" class="form-control"></select>
                @*<input asp-for="SpecialTagId" class="form-control" />*@
                <span asp-validation-for="RoleId" class="text-danger"></span>
                <span class="text-danger">@ViewBag.message</span>
            </div>

        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Assign" />
            <a asp-action="AssignUserRole" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

